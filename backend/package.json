    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  },
  "mikro-orm": {
    "useTsNode": true,
