    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.1",
    "gen-env-types": "^1.3.4",
    "nodemon": "^2.0.19",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.1.5",
    "@mikro-orm/core": "^5.1.5",
